    \hnust@error{You have to use the star form: \string\hnust@chapter*}%
  }%
  \if@openright\cleardoublepage\else\clearpage\fi%
  \IfValueTF{#2}{%
    \ifthenelse{\equal{#2}{}}{%
      \hnust@pdfbookmark{0}{#3}%
    }{%
      \hnust@phantomsection
      \addcontentsline{toc}{chapter}{#2}%
    }%
